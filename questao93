#include <stdio.h>

int main()
{   int matriz [3][3] = {};
    int somaPrincipal = 0; 
    int somaSecundaria = 0; 

    for (int i = 0; i <= 2; i++){
        for (int j = 0; j <= 2; j++){
            printf("Preencha o vetor: \n");
            scanf ("%i", &matriz [i][j]);
        }
        
            }
    printf ("Matriz: \n");
    for (int i = 0; i <= 2; i++){
        for (int j = 0; j <= 2; j++){
            printf("%i   ", matriz [i][j]);
            
        }
        
        printf ("\n");
    }
    
    for (int i = 0, j = 2; i <= 2, j >= 0; i++, j--){
        
        somaSecundaria = somaSecundaria + matriz [i][j]; // 0, 2; 
        
    }
    
    for (int i = 0, j = 0; i <= 2, j <=2; i++, j++){
        
        somaPrincipal = somaPrincipal + matriz [i][j]; // 0, 2; 
        
    }
    
    
    printf ("Soma da diagonal secundÃ¡ria: %i\n", somaSecundaria);
    printf ("Soma da diagonal principal: %i\n", somaPrincipal);
    return 0;
}
